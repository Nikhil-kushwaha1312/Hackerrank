long candies(int n, vector<int> arr) {
    vector<int>ans(n,1);
    for(int i=1;i<n;i++){
        if(arr[i]>arr[i-1]) ans[i]=ans[i-1]+1;  
    }
    for(int i=n-2;i>=0;i--){
        if(arr[i]>arr[i+1]) ans[i]=max(ans[i+1]+1,ans[i]);
    }
    long count=0;
    for(auto i:ans){
        count+=i;
    }
    return count;
}
